---
import Icon from "@/components/Icon.astro";
import IconWrapper from "@/components/IconWrapper.astro";
import { ASSET_PREFIX } from "@/config/constants";
import type { Adventaje } from "@/config/landing.interface";

interface Props {
  data: Adventaje;
  reversed: boolean;
}

const { data, reversed } = Astro.props;
---

<article
  class=`flex justify-between gap-x-16 md:gap-x-16 xl:gap-x-32 flex-col mb-20 md:mb-40 ${reversed ? "md:flex-row-reverse" : "md:flex-row"}`
>
  <div class="md:w-3/4 mb-6 md:mb-0">
    <img src={ASSET_PREFIX + data.img} alt={data.imageAlt} class="w-fit" />
  </div>
  <div class="flex flex-col md:w-5/6 md:gap-y-4 xl:gap-y-8">
    <h3 class="text-xl md:text-2xl font-bold xl:text-4xl mb-4 md:mb-0">
      {data.title}
    </h3>
    <p class="md:text-xl mb-4 md:mb-0">{data.description}</p>
    <ul class="flex flex-col gap-y-4 md:gap-y-8">
      {
        data.checks.map((check) => (
          <li class="flex flex-row items-center gap-x-4 md:text-xl xl:text-2xl">
            <IconWrapper>
              <Icon icon="CheckIcon" />
            </IconWrapper>
            {check}
          </li>
        ))
      }
    </ul>
  </div>
</article>
