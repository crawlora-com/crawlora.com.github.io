---
import { Image } from "astro:assets";
import Tmobile from "../../../images/brands/t-mobile.png"
import Amogen from "../../../images/brands/amogen.png"
import Decathon from "../../../images/brands/decathon.png"
import OpenTable from "../../../images/brands/opentable.png"
import Roche from "../../../images/brands/roche.png"
import Samsung from "../../../images/brands/samsung.png"
import Siemens from "../../../images/brands/siemens.png"
// Define props from Astro
const { title, subTitle } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 sm:text-3xl"
    >
      {title}
    </h2>
    {
      subTitle && (
        <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
  </div>
  <div
    class="flex flex-col items-center justify-center gap-y-2 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-24"
  >

    <Image 
      src={Tmobile}
      width={96}
      height={18}
      alt={"Tmobile trusts crawlora"}
      draggable=false
      loading={"eager"}
      format="png"
    />

    <Image 
      src={Amogen}
      width={96}
      height={18}
      alt={"Amogen trusts crawlora"}
      draggable=false
      loading={"eager"}
      format="png"
    />

    <Image 
      src={Decathon}
      width={96}
      height={18}
      alt={"Decathon trusts crawlora"}
      draggable=false
      loading={"eager"}
      format="png"
    />

    <Image 
    src={OpenTable}
    width={96}
    height={18}
    alt={"OpenTable trusts crawlora"}
    draggable=false
    loading={"eager"}
    format="png"
  />


  <Image 
    src={Roche}
    width={96}
    height={18}
    alt={"Roche trusts crawlora"}
    draggable=false
    loading={"eager"}
    format="png"
  />

  <Image 
    src={Samsung}
    width={96}
    height={18}
    alt={"Samsung trusts crawlora"}
    draggable=false
    loading={"eager"}
    format="png"
  />


<Image 
  src={Siemens}
  width={96}
  height={18}
  alt={"Siemens trusts crawlora"}
  draggable=false
  loading={"eager"}
  format="png"
/>

    </div>
</section>
