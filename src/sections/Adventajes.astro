---
import SectionTitle from "@/components/SectionTitle.astro";
import SideBySide from "@/components/SideBySide.astro";
import type { AdventajesData } from "@/config/landing.interface";

interface Props {
  data: AdventajesData;
}

const { data } = Astro.props;
---

<section
  id="adventajes-section"
  class="flex flex-col mb-0 md:mb-20 gap-y-6 sm:gap-y-8 md:gap-y-20"
>
  <SectionTitle>
    {data.title}
  </SectionTitle>
  <div>
    {
      data.adventajes.map((adventaje, idx) => (
        <SideBySide data={adventaje} reversed={(idx + 1) % 2 === 0} />
      ))
    }
  </div>
</section>
