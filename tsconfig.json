{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "vite-plugin-pwa/client",
      "vite-plugin-pwa/info",
      "swiper",
      "tiny-slider",
      "bootstrap"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data_files/*"],
      "@api/*": ["src/api/*"],
      "@images/*": ["src/images/*"],
      "@scripts/*": ["src/assets/scripts/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@utils/*": ["src/utils/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"  // Include your custom types directory
    ]
  }
}